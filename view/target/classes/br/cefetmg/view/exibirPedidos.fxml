<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="br.cefetmg.view.ExibirPedidosController">

    <padding>
        <Insets bottom="20" left="20" right="20" top="20" />
    </padding>

    <TableView fx:id="tabela">
        <columns>
            <TableColumn fx:id="valorTotalCol" maxWidth="90" minWidth="90" text="Valor Total" />
            <TableColumn fx:id="statusCol" maxWidth="60" minWidth="60" text="Status" />
            <TableColumn fx:id="obsCol" maxWidth="70" minWidth="70" text="Observação" />
            <TableColumn fx:id="formaPagCol" maxWidth="70" minWidth="70" text="Forma de Pagamento" />
            <TableColumn fx:id="qntdCol" maxWidth="70" minWidth="70" text="Quantidade" />
            <TableColumn fx:id="dataCol" maxWidth="70" minWidth="70" text="Data" />
        </columns>
    </TableView>
   <Button mnemonicParsing="false" onAction="#voltar" text="Voltar" />
</VBox>

